{
  "name": "synapse",
  "version": "0.1.0",
  "description": "OpenAI-compatible LLM proxy with provider fallback chain",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "synapse": "./src/cli.ts"
  },
  "scripts": {
    "start": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "lint": "oxlint src/",
    "format": "biome check --write src/ test/",
    "format:check": "biome check src/ test/",
    "test": "bun test",
    "validate": "bun run typecheck && bun run lint && bun run format:check && bun run test",
    "version:bump": "bunx version-bump",
    "prepare": "husky"
  },
  "dependencies": {
    "@shetty4l/core": "^0.1.30"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/bun": "latest",
    "husky": "^9.0.0",
    "oxlint": "^1.48.0",
    "typescript": "^5.0.0"
  }
}
